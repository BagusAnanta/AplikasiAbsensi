<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplikasiAbsensi"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".DeleteDosenActivity"
            android:exported="false"
            android:label="@string/title_activity_delete_dosen"
            android:theme="@style/Theme.AplikasiAbsensi" />
        <activity
            android:name=".UpdateDosenActivity"
            android:exported="false"
            android:label="@string/title_activity_update_dosen"
            android:theme="@style/Theme.AplikasiAbsensi" />
        <activity
            android:name=".ReadDosenActivity"
            android:exported="false"
            android:label="@string/title_activity_read_dosen"
            android:theme="@style/Theme.AplikasiAbsensi" />
        <activity
            android:name=".CreateDosenActivity"
            android:exported="false"
            android:label="@string/title_activity_create_dosen"
            android:theme="@style/Theme.AplikasiAbsensi" />
        <activity
            android:name=".HomeAdminActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_main"
            android:theme="@style/Theme.AplikasiAbsensi" />
        <activity
            android:name=".OptionActivity"
            android:exported="true"
            android:label="@string/title_activity_option"
            android:theme="@style/Theme.AplikasiAbsensi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignInAdminActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_in_admin"
            android:theme="@style/Theme.AplikasiAbsensi" />
        <activity
            android:name=".MainActivityMenu"
            android:exported="false"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.AplikasiAbsensi" />
        <activity
            android:name=".SignInMahasiswaActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_in_mahasiswa"
            android:theme="@style/Theme.AplikasiAbsensi" />
        <activity
            android:name=".SignInDosenActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.AplikasiAbsensi" />
    </application>

</manifest>